{
  "extends": "../../packages/tsconfig/next.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "novel": [
        "../../packages/headless/src"
      ],
      "novel/*": [
        "../../packages/headless/src/*"
      ],
      "ai/react": [
        "./node_modules/ai/react/dist/index.js"
      ]
    },
    "baseUrl": "./",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "public-api-services/**/*.ts",
    "components/ErrorBoundary.tsx",
    "components/tailwind/ErrorPage.tsx",
    "models/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "components/**/*",
    "contexts",
    "hooks",
    "lib",
    "services",
    "packages",
    "public"
  ]
}
