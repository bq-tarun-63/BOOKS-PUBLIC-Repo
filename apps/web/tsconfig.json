{
  "extends": "../../packages/tsconfig/next.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "novel": [
        "../../packages/headless/src"
      ],
      "novel/*": [
        "../../packages/headless/src/*"
      ],
      "ai/react": [
        "./node_modules/ai/react/dist/index.js"
      ]
    },
    "baseUrl": "./",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
